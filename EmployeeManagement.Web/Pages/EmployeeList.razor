@page "/"
@inherits EmployeeListBase

<h3>Employee List</h3>

@if(Employees is null)
{
    <div class="spinner"></div>
}
else
{
    <div class="card-deck">
        @foreach (var employee in Employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
                <div class="card-header">
                    <h3>@employee.FirstName @employee.LastName</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@employee.PhotoPath" />
                <div class="card-footer text-center">
                    <a class="btn btn-primary m-1" href="#">View</a>
                    <a class="btn btn-primary m-1" href="#">Edit</a>
                    <a class="btn btn-danger m-1" href="#">Delete</a>
                </div>
            </div>
        }
    </div>
}